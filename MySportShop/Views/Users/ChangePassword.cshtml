@model MySportShop.Models.ViewModel.ChangePasswordVM

<div class="container">
    <form method="post" asp-controller="Users" asp-action="ChangePassword">
        <div class="form-group">
            <label asp-for="@Model.Email"></label>
            <input asp-for="@Model.Email" class="form-control" />
            <span asp-validation-for="@Model.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.NewPassword">Enter Password</label>
            <input asp-for="@Model.NewPassword" class="form-control" />
            <span asp-validation-for="@Model.NewPassword" class="text-danger"></span>
        </div>
        <input type="submit" class="btn btn-success" value="Change password" />
    </form>
</div>