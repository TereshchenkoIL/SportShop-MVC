@model MySportShop.Models.Models.Product

<div class="col-lg-4 col-md-6 pb-4 filter">
    <!-- Card-->
    <div class="card bg-white rounded shadow-sm" style="border:1px solid #222">
       
        <img class="card-img-top img-fluid d-block mx-auto mb-3" src="@WC.ImagePath@Model.Image" alt="Card image cap">
        <div class="card-body p-1 px-3 row">
            <div class="col-12 pt-2" style="font-size:13px; text-align:justify">
                <p> @Model.Name</p>
            </div>
            <div class="col-12 pt-2" style="font-size:13px; text-align:justify">
                <span class="text-info h5">@string.Format("{0:c0}", Model.Price)</span>
            </div>
            <div class="col-12 pt-2" style="font-size:13px; text-align:justify">
                <p> @Model.Description</p>
            </div>
            <div class="col-6 p-1">
                <a asp-controller="Sneakers" asp-action="Details" asp-route-id="@Model.ProductId" class="btn btn-dark form-control btn-sm p-2" style="height:40px">View Details</a>
            </div>
            <div class="col-6 p-1">
                <form method="post" asp-action="AddToCart">
                    <input name="Id" asp-for="ProductId" hidden />
                    <button type="submit"  class="btn btn-success form-control btn-sm p-2" style="height:40px">Add to Cart</button>
                </form>
            </div>
        </div>
    </div>
</div>